      <Button Style="{StaticResource LayoutButtonStyle}" Clicked="Danger_OnClicked"/>
      <Label Text="危险驾驶"  Font="{StaticResource standardFont}" Style="{StaticResource LayoutLabelStyle}"/>
    </StackLayout>
